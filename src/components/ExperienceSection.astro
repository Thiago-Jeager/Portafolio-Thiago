---
import { profileConst } from '../const/profileConst';
import Experience from '../assets/svg/Experience.svg';
import ExperienceAcordion from './ExperienceAcordion.astro';
---

<section class="w-[90%] max-w-full px-2.5 py-5 mx-auto mt-8">
  <div class="flex flex-col md:flex-row items-center">
    <!-- Imagen/SVG -->
    <div class="flex-1 flex items-center justify-center">
      <Experience class="w-full  md:max-w-md lg:max-w-lg" />
    </div>
    <!-- Imagen/SVG -->
    <!-- Texto -->
    <div class="flex-1 mb-8 md:mb-0">
      <h1
        class="text-center md:text-right text-3xl md:text-5xl xl:text-[60px] xl:mt-20 leading-none text-primary"
        style="font-family: 'Google Sans Bold';"
      >
        Experiencia
      </h1>
      <h2
        class="text-2xl lg:text-3xl text-primary md:text-right text-center"
        style="font-family: 'Google Sans Bold Italic';"
      >
        Trabajo, Proyectos y Freelance
      </h2>
      <p
        class="text-center md:text-right text-base md:text-xl xl:text-xl leading-none text-secondary lg:mt-5 ml-0"
        style="font-family: 'Google Sans Medium';"
      >
        {profileConst.experienceDesc}
      </p>
    </div>
    
  </div>
  <ExperienceAcordion />
</section>