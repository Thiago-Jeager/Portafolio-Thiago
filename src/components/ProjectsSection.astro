---
import Project from "../assets/svg/Projects.svg";
import { project } from "../const/projects";
---

<section class="w-[90%] max-w-full px-2.5 py-5 mx-auto mt-8">
  <div class="flex flex-col md:flex-row items-center justify-center">
    <!-- Imagen/SVG -->
    <div class="flex-1 flex items-center justify-center">
      <Project class="w-full md:max-w-md lg:max-w-lg" />
    </div>
    <!-- Imagen/SVG -->
    <!-- Texto -->
    <div class="flex-1 mb-8 md:mb-0">
      <h1
        class="text-center md:text-right text-3xl md:text-5xl xl:text-[60px] xl:mt-20 leading-none text-primary"
        style="font-family: 'Google Sans Bold';"
      >
        Proyectos
      </h1>
      <p
        class="text-center md:text-right text-base md:text-xl xl:text-xl leading-none text-secondary lg:mt-5 ml-0"
        style="font-family: 'Google Sans Medium';"
      >
        {project.description}
      </p>
    </div>
  </div>
  <!-- Status del Perfil -->
  <div class="flex justify-center items-center md:mt-10">
    <a href={project.githubLink}>
      <img class="hover:scale-105 transition-all"
        src={project.githubStatus}
      />
    </a>
  </div>
  <!-- Cards de los proyectos -->
  <div class="flex flex-wrap gap-6 justify-center mt-10">
    {
      project.data.map((p) => (
        <a href={p.repository} class="shadow-lg rounded-lg">
          <img class="shadow-2xs hover:scale-105 transition-all" src={p.link} alt={p.alt} />
        </a>
      ))
    }
  </div>
</section>
