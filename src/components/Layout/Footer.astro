---
import { profileConst } from "../../../src/const/profileConst.ts";
import SocialMedia from "../SocialMedia.astro";
---
<footer class="bg-primary" id="contact">
  <hr class="w-[90%]  border-1 border-[#7F8DAA] sm:mx-auto"/>
    <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
        <div class="md:flex md:justify-between mb-2.5">
          <div class="mb-6 md:mb-0 flex flex-col  md:flex-row justify-center items-center">
                  <img 
                  src={`/assets/img/${profileConst.profilePhoto}`} 
                  class="h-[200px] rounded-2xl" alt="foto de parfil, Santiago, Portafolio" />
                  <p class="mb:mt-0 mt-2.5 text-base text-center">Elaborado por <span class="font-bold">{profileConst.name}</span> ©{profileConst.year} 
          </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-center">
              <div>
                  <h2 class="mb-6 text-sm uppercase font-bold flex justify-center items-center">Redes Sociales</h2>
                  <SocialMedia />
              </div>
              <div>
                  <h2 class="mb-6 text-sm uppercase font-bold">Dirección</h2>
                  <p>{profileConst.direction}</p>
              </div>
          </div>
      </div>
    </div>
</footer>

