---
// ...existing code...
import HeaderItems from '../Layout/HeaderItems.astro';
---

<header x-data="{ open: false }" class="relative">
  <nav class="block max-w-[90%] px-2.5 py-5 mx-auto transition-all duration-300 ease-in-out md:text-xs lg:text-base xl:text-xl">
    <div class="flex items-center h-16 justify-between">
      <!-- Logo -->
      <div class="flex text-2xl">
        <a href="" class="text-primary flex items-center justify-center">
          <span>&lt;</span>
          <span class="px-2.5 text-primary" style="font-family: 'Agustina'; font-weight: bold;">
            Santiago
          </span>
          <span>/&gt;</span>
        </a>
      </div>
      <!-- Items: visibles solo en md o mayor -->
      <div class="hidden md:flex items-center ">
        <HeaderItems href="/">Inicio</HeaderItems>
        <HeaderItems href="/education">Educación</HeaderItems>
        <HeaderItems href="/experience">Experiencia</HeaderItems>
        <HeaderItems href="/projects">Proyectos</HeaderItems>
        <HeaderItems href="/contact">Contacto</HeaderItems>
      </div>
      <!-- Botón menú: visible solo en móviles -->
      <div class="flex md:hidden ml-2">
       <!-- Botón hamburguesa animado -->
<button
  @click="open = !open"
  type="button"
  class="relative w-10 h-10 flex flex-col justify-center items-center group md:hidden"
  aria-controls="mobile-menu"
  :aria-expanded="open"
>
  <span class="sr-only">Open main menu</span>
  <span
    :class="open ? 'rotate-45 translate-y-2' : ''"
    class="block h-0.5 w-8 bg-secondary transition-all duration-300 ease-in-out"
  ></span>
  <span
    :class="open ? 'opacity-0' : ''"
    class="block h-0.5 w-8 bg-secondary my-1 transition-all duration-300 ease-in-out"
  ></span>
  <span
    :class="open ? '-rotate-45 -translate-y-1' : ''"
    class="block h-0.5 w-8 bg-secondary transition-all duration-300 ease-in-out"
  ></span>
</button>
      </div>
    </div>
    <!-- Menú móvil animado -->
    <div
      id="mobile-menu"
      x-show="open"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      class="md:hidden absolute left-0 right-0 z-10 bg-primary dark:bg-gray-900 shadow-lg rounded-b-2xl px-4 py-6"
    >
      <nav class="flex flex-col gap-4">
        <HeaderItems href="/">Inicio</HeaderItems>
        <HeaderItems href="/education">Educación</HeaderItems>
        <HeaderItems href="/experience">Experiencia</HeaderItems>
        <HeaderItems href="/projects">Proyectos</HeaderItems>
        <HeaderItems href="/contact">Contacto</HeaderItems>
      </nav>
    </div>
  </nav>
</header>