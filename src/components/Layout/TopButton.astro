<div
  id="topButton"
  class="fixed bottom-5 right-6 z-50 p-4 rounded-full text-3xl cursor-pointer duration-200 bg-secondary text-background opacity-0 pointer-events-none hover:scale-125"
  
>
  <i class="fas fa-arrow-up"></i>
</div>

<script>
  const topButton = document.getElementById("topButton");
  if (topButton) {
    // console.error("Top button element not found");
    window.addEventListener("scroll", () => {
      if (window.scrollY > 30) {
        topButton.classList.add("opacity-100", "pointer-events-auto");
        topButton.classList.remove("opacity-0", "pointer-events-none");
      } else {
        topButton.classList.remove("opacity-100", "pointer-events-auto");
        topButton.classList.add("opacity-0", "pointer-events-none");
      }
    });
    topButton.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }
</script>
