---
const { title } = Astro.props;
import Header from "../components/Layout/Header.astro";
import Footer from "../components/Layout/Footer.astro";
import "./src/styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
      defer></script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family: "Google Sans Regular", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    background-color: #edf9fe;
    width: 100%;
    height: 100%;
    color: #001c55;
  }
  @font-face {
    font-family: "Agustina";
    src: url("/fonts/Agustina.woff") format("woff");
    font-style: normal;
    font-weight: normal;
  }
  @font-face {
    font-family: "Google Sans Regular";
    src: url("/fonts/GoogleSans-Regular.ttf") format("woff");
    font-style: normal;
  }
  @font-face {
    font-family: "Google Sans Medium";
    src: url("/fonts/GoogleSans-Medium.ttf") format("woff");
    font-style: normal;
  }
  @font-face {
    font-family: "Google Sans Bold";
    src: url("/fonts/GoogleSans-Bold.ttf") format("woff");
    font-style: normal;
  }
  @font-face {
    font-family: "Google Sans Bold Italic";
    src: url("/fonts/GoogleSans-BoldItalic.ttf") format("woff");
    font-style: normal;
  }
</style>
